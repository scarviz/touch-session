<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <ImageView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/main_logo"/>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal" >
    <ImageButton
        android:src="@drawable/btn_sound_read_style"
        android:background="#00000000"
        android:id="@+id/MainViewbtnNFC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="音の読み取り" />
    <ImageButton
        android:src="@drawable/btn_sound_edit_style"
        android:id="@+id/MainViewbtnEdit"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="拍子編集" />

    <ImageButton
        android:src="@drawable/btn_sound_play_style"
        android:id="@+id/MainViewbtnSession"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="セッション作成" />
    </LinearLayout>

</LinearLayout>